<Window x:Class="GradeJournal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Электронный журнал" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding AddGradeCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding EditGradeCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteGradeCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Menu Grid.Row="0">
            <MenuItem Header="Файл"/>
            <MenuItem Header="Студенты"/>
            <MenuItem Header="Оценки">
                <MenuItem Header="Добавить" Command="{Binding AddGradeCommand}" InputGestureText="Ctrl+N"/>
                <MenuItem Header="Редактировать" Command="{Binding EditGradeCommand}" InputGestureText="Ctrl+E"/>
                <MenuItem Header="Удалить" Command="{Binding DeleteGradeCommand}" InputGestureText="Del"/>
            </MenuItem>
            <MenuItem Header="Настройки"/>
        </Menu>

        <!-- Панель инструментов -->
        <ToolBar Grid.Row="1">
            <Button Content="Добавить оценку" Command="{Binding AddGradeCommand}" Padding="10"/>
            <Button Content="Редактировать оценку" Command="{Binding EditGradeCommand}" Padding="10"/>
            <Button Content="Удалить оценку" Command="{Binding DeleteGradeCommand}" Padding="10"/>
            <Button Command="{Binding ExportToExcelCommand}" ToolTip="Экспортировать в Excel">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Экспорт в Excel" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </ToolBar>

        <!-- Таблица студентов с DataTemplate -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Grades}" SelectedItem="{Binding SelectedGrade}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Студент" Binding="{Binding StudentName}" Width="120"/>
                <DataGridTemplateColumn Header="Оценка" Width="90">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Посещаемость" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsPresent, Mode=TwoWay}" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="200"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="130"/>
                <DataGridTextColumn Header="Средний балл" Binding="{Binding AverageGrade, Mode=OneWay}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>